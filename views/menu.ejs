<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>

  <h1>Full Menu</h1>

  <hr>
  
  <% 
    let mains = [];
    let sides = [];
    let desserts = [];

    menu.forEach((item) => {
        if (item.category === "mains") {
            mains.push(item);
        } else if (item.category === "sides") {
            sides.push(item);
        } else if (item.category === "desserts") {
            desserts.push(item);
        }
    }); 
  %>

  <h2>Mains</h2>
  <% mains.forEach((item) => { %>
      <h3><%= item.name %></h3>
      <p>Price: $<%= item.price %></p>
      <p>Rating: <%= item.rating %></p>
      <p>Details: <%= item.details %></p>
  <% }); %>
  
  <hr>

  <h2>Sides</h2>
  <% sides.forEach((item) => { %>
      <h3><%= item.name %></h3>
      <p>Price: $<%= item.price %></p>
      <p>Rating: <%= item.rating %></p>
      <p>Details: <%= item.details %></p>
  <% }); %>
  
  <hr>
  
  <h2>Desserts</h2>
  <% desserts.forEach((item) => { %>
      <h3><%= item.name %></h3>
      <p>Price: $<%= item.price %></p>
      <p>Rating: <%= item.rating %></p>
      <p>Details: <%= item.details %></p>
  <% }); %>


</body>
</html>
